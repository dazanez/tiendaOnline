<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/8"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controlador.FlyweightController"
      spacing="15" alignment="CENTER">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Productos con proveedor compartido (Flyweight)"/>
    <Button text="Cargar productos" onAction="#mostrarProductos"/>

    <TextArea fx:id="resultadoArea" editable="false" prefHeight="200" wrapText="true"/>

</VBox>
