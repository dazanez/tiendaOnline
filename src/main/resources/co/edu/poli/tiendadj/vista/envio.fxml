<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="300.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/23.0.1" 
             xmlns:fx="http://javafx.com/fxml/1" 
             fx:controller="co.edu.poli.tiendadj.controlador.EnvioController">

    <Label layoutX="120.0" layoutY="20.0" text="Seleccione tipo de envío:" />
    <ComboBox fx:id="cbEnvio" layoutX="120.0" layoutY="40.0" prefWidth="160.0" />

    <Label layoutX="120.0" layoutY="80.0" text="Seleccione tipo de mercancía:" />
    <ComboBox fx:id="cbMercancia" layoutX="120.0" layoutY="100.0" prefWidth="160.0" />

    <Button layoutX="140.0" layoutY="140.0" onAction="#procesarEnvio" text="Procesar Envío" />

    <Label fx:id="lblResultado" layoutX="100.0" layoutY="180.0" text="" wrapText="true" maxWidth="250.0" />

</AnchorPane>
