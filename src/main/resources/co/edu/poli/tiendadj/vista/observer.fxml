        <HBox spacing="10">
            <Label text="Nuevo precio:"/>
            <TextField fx:id="txtNuevoPrecio" promptText="Ej: 89.99" prefWidth="100"/>
            <Button fx:id="btnActualizarPrecio" text="Actualizar Precio" onAction="#actualizarPrecio"/>
        </HBox>

        <HBox spacing="20">
            <VBox spacing="5" prefWidth="200">
                <Label text="Usuarios suscritos:"/>
                <ListView fx:id="listaSuscritos" prefHeight="200"/>
            </VBox>

            <VBox spacing="5" VBox.vgrow="ALWAYS">
                <Label text="Notificaciones:"/>
                <TextArea fx:id="areaNotificaciones" wrapText="true" prefHeight="200"/>
            </VBox>
        </HBox>
    </VBox>
</AnchorPane>
